@model User
<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <style>
        body {
        
            background-color: whitesmoke;
            color: #FFFF00;
            font-family: 'Press Start 2P', cursive;
            position: relative;
            margin: 0;
            padding: 0;
            display: flex; /* Use flexbox for vertical and horizontal centering */
            justify-content: center; /* Center horizontally */
            align-items: center; /* Center vertically */
            height: 100vh; /* Set full height of viewport */
        }

        .container {
            width: 50%; /* Set width of the container */
        }

        h1 {
            color: #FFA500; /* Orange color */
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .control-label {
            font-weight: bold;
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-top: 10px; /* Add some space between buttons */
        }

            input[type="submit"]:hover {
                background-color: #0056b3; /* Darker shade of blue */
            }

        a.btn-register {
            display: block;
            width: 100%;
            height: 45px;
            margin-top: 5px;
            text-align: center;
            padding: 10px;
            border-radius: 5px;
            background-color: #28a745; /* Green color for register button */
            color: #fff;
            text-decoration: none;
            line-height: 25px;
            transition: background-color 0.3s;
        }

            a.btn-register:hover {
                background-color: #218838; /* Darker shade of green on hover */
            }

        input[type="submit"].btn-back {
            display: block;
            width: 100%;
            margin-top: 5px;
        }

        .error-message {
            color: red;
            font-style: italic;
        }

        footer {
            background-color: white;
            padding: 10px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Login</h1>
        @using (Html.BeginForm("Login", "Authentication", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { Class = "control-label" })
                @Html.TextBoxFor(m => m.UserName,
                         new { placeholder = "User Name", Class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Pass, new { Class = "control-label" })
                @Html.PasswordFor(m => m.Pass,
                         new { placeholder = "Password", Class = "form-control" })
            </div>
            <div class="error-message">
                @ViewBag.error
            </div>
            <br />
            <input type="submit" value="Login" class="btn btn-info" />
            
            <input type="submit" value="Back" class="btn-back" asp-area="" asp-controller="Home" asp-action="Index" />
            <div style="margin-top: 10px;"></div>
            <a class="btn btn-success" asp-area="" asp-controller="Authentication" asp-action="Register">Register</a>
        }
    </div>
</body>
</html>
