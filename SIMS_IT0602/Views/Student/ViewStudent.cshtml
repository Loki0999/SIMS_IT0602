@model IEnumerable<Student>

<style>
    /* Your existing CSS styles */

    body {
        background-color: lightblue;
        color: darkorange;
        font-family: 'Press Start 2P', cursive;
        position: relative;
        padding: 20px; /* Add some padding for better readability */
    }

    h1 {
        color: darkorange; /* orange color for the heading */
        text-align: center; /* Center align the heading */
        margin-bottom: 20px; /* Add some margin at the bottom */
    }

    table {
        width: 100%;
        border-collapse: collapse; /* Collapse table borders */
        margin-bottom: 20px; /* Add some margin at the bottom */
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid darkorange; /* Yellow border bottom for table rows */
    }

    th {
        background-color: #ffffff; /* Dark blue background for table header */
    }

    tbody tr:nth-child(even) {
        background-color: deepskyblue; /* Dark blue background for even table rows */
    }

    ul {
        list-style: none; /* Remove bullet points from the list */
    }

    li {
        margin-bottom: 10px; /* Add some margin at the bottom of each list item */
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #FFFF00; /* Yellow background for buttons */
        color: #0C2340; /* Dark blue text color for buttons */
        text-decoration: none;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #FFD700; /* Bright yellow background on hover */
        }

    .search-container {
        margin-bottom: 20px; /* Add some margin at the bottom */
        text-align: center; /* Center align the search input */
    }

    .search-input {
        padding: 10px;
        width: 300px;
        border-radius: 5px;
        border: 1px solid darkorange; /* Yellow border for search input */
    }

    .search-btn {
        padding: 10px 20px;
        background-color: #FFFF00; /* Yellow background for search button */
        color: #0C2340; /* Dark blue text color for search button */
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .search-btn:hover {
            background-color: #FFD700; /* Bright yellow background on hover */
        }
</style>

<h1>Hello Teacher, Welcome to StudentList!</h1>

<!-- Search container -->
<div class="search-container">
    <input type="text" id="searchInput" class="search-input" placeholder="Search by Name...">
    <button onclick="search()" class="search-btn">Search</button>
</div>

<!-- Student table -->
<table class="table">
    <!-- Table header -->
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Date of Birth</td>
            <td>Address</td>
            <td>Major</td>
        </tr>
    </thead>
    <!-- Table body -->
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.DoB</td>
                <td>@item.Address</td>
                <td>@item.Major</td>
            </tr>
        }
    </tbody>
</table>

<!-- Back to HomePage button -->
<ul>
    <li><a class="btn btn-sm btn-primary" asp-controller="Teacher" asp-action="Index">Back to HomePage</a></li>
</ul>

<script>
    function search() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("searchInput");
        filter = input.value.toUpperCase();
        table = document.querySelector(".table");
        tr = table.getElementsByTagName("tr");

        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[1]; // Search in the second column (Name column)
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>
